{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/design/*": ["./src/design/*"],
      "@/ui": ["./src/design/ui"],
      "@/components/*": ["./src/design/components/*"],
      "@/components/ui": ["./src/design/components/core/layout"],
      "@/components/ui/*": ["./src/design/components/core/layout/*"],
      "@/components/layout": ["./src/design/components/core/layout"],
      "@/components/layout/*": ["./src/design/components/core/layout/*"],
      "@/components/admin/*": ["./src/design/components/business/admin/*"],
      "@/components/business/*": ["./src/design/components/business/*"],
      "@/components/marketing/*": ["./src/design/components/business/marketing/*"],
      "@/components/icons/*": ["./src/design/components/icons/*"],
      "@/components/providers/*": ["./src/design/providers/*"],
      "@/ui/*": ["./src/design/components/core/layout/*"],
      "@/icons/*": ["./src/design/components/icons/*"],
      "@/business/*": ["./src/design/components/business/*"],
      "@/providers/*": ["./src/design/providers/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "temp-design-library"]
}
