rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to CMS configuration
    match /cms/{document} {
      allow read: if true;
      allow write: if true;  // Temporarily allow writes for development
    }

    // Allow public booking creation for customer bookings
    match /bookings/{bookingId} {
      allow create: if true;  // Allow public booking creation
      allow read, write: if request.auth != null;  // Admin operations require auth
    }

    // Allow admin access to drivers collection
    match /drivers/{driverId} {
      allow read, write: if request.auth != null;  // Admin operations require auth
    }

    // Allow admin access to payments collection
    match /payments/{paymentId} {
      allow read, write: if request.auth != null;  // Admin operations require auth
    }

    // Allow admin access to feedback collection
    match /feedback/{feedbackId} {
      allow read, write: if request.auth != null;  // Admin operations require auth
    }

    // Allow users to read their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow reads and writes to the comments collection
    match /comments/{commentId} {
      allow read, write: if true;
    }

    // Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
